<Application xmlns="clr-namespace:Layex.Layouts;assembly=Layex" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:v="clr-namespace:Layex.Sample.ModuleB.ViewModels;assembly=Layex.Sample.ModuleB"
             xmlns:a="clr-namespace:Layex.Sample.ModuleB.Actions;assembly=Layex.Sample.ModuleB">
    <Layout Name="Layex.Sample.LayoutedItems.Full">
        <Layout.ViewModels>
            <ViewModel Type="{x:Type v:SampleViewModel}" Singleton="True" AutoActivate="True" Locked="True" Order="20" />
        </Layout.ViewModels>
        <Layout.ActionItems>
            <ActionGroup Name="Main">
                <ActionGroup Name="Open">
                    <ActionCommand Name="OpenSampleB" Order="20" Type="{x:Type a:OpenViewAction}" />
                </ActionGroup>
            </ActionGroup>
        </Layout.ActionItems>
    </Layout>
    <Layout Name="Layex.Sample.LayoutedItems.Mini">
        <Layout.ViewModels>
            <ViewModel Type="{x:Type v:SampleViewModel}" Singleton="True" AutoActivate="True" Locked="True" Order="20" />
        </Layout.ViewModels>
        <Layout.ActionItems>
            <ActionGroup Name="Main">
                <ActionGroup Name="Open">
                    <ActionCommand Name="OpenSampleB" Order="20" Type="{x:Type a:OpenViewAction}" />
                </ActionGroup>
            </ActionGroup>
        </Layout.ActionItems>
    </Layout>
</Application>