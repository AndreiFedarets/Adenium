<v:View x:Class="Layex.Sample.ModuleA.Views.SampleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:Layex.Views;assembly=Layex"
        Height="200" Width="300">
    <StackPanel>
        <TextBlock Text="{Binding DisplayName, StringFormat='Hello! I am {0}'}" />
        <CheckBox IsChecked="{Binding DialogReady}" Content="I am ready" />
    </StackPanel>
</v:View>
