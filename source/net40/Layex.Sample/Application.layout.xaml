<Application xmlns="clr-namespace:Layex.Layouts;assembly=Layex" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:v="clr-namespace:Layex.Sample.ViewModels;assembly=Layex.Sample"
             xmlns:a="clr-namespace:Layex.Sample.Actions;assembly=Layex.Sample">
    <Layout>
        <Layout.ViewModels>
            <ViewModel Type="{x:Type v:MainViewModel}" Singleton="true" AutoActivate="true" />
            <ViewModel Type="{x:Type v:SampleItemsViewModel}" Singleton="true" AutoActivate="false" />
        </Layout.ViewModels>
    </Layout>
    <Layout ViewModelName="Layex.Sample.LayoutedItems">
        <Layout.ActionGroups>
            <ActionGroup Name="Main">
                <ActionGroup Name="Close" Order="10" Type="{x:Type a:CloseGroup}">
                    <ActionCommand Name="CloseItemsView" Order="10" Type="{x:Type a:CloseViewAction}" />
                </ActionGroup>
                <ActionCommand Name="ResetItems" Order="20" Type="{x:Type a:ResetItemsAction}" />
            </ActionGroup>
            <ActionGroup Name="ItemContext">
                
            </ActionGroup>
        </Layout.ActionGroups>
    </Layout>
</Application>
