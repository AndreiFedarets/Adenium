<v:View x:Class="Layex.Sample.Views.SampleItemsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:Layex.Views;assembly=Layex"
        Height="600" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0" HorizontalAlignment="Right" ItemsSource="{Binding AvailableDisplayModes}" SelectedItem="{Binding DisplayMode}" />
        <ContentControl x:Name="ViewContent" Grid.Row="1" />
    </Grid>
</v:View>
